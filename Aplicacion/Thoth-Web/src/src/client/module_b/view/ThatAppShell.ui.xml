<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header{
			float:right;
			padding-right:100px;
			font-size:25px;
		}
		
		.content {
			padding: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
			<h1>Registro</h1>
<g:SimplePanel ui:field="message"></g:SimplePanel>
		<table>

			<tr>
				<td>First name</td>
				<td>
					<g:TextBox ui:field="fName"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>Last name </td>
				<td>
					<g:TextBox ui:field="lName"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>E-mail address </td>
				<td>
					<g:TextBox ui:field="email"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>Password</td>
				<td>
					<g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					<g:Button ui:field="submit_button"></g:Button>
					<g:Anchor ui:field="login_link"></g:Anchor>
				</td>
			</tr>
		</table>
		<br/>
		<br/>
		<br/>

	</g:HTMLPanel>
</ui:UiBinder> 