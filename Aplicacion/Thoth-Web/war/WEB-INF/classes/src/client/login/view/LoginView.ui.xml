
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	  /* author: Francisco Javier Páramo Arnaiz.
 version: 1.0 */
 
	/* Input fields */
	input[type=text], input[type=password], input[type=email] {
		font-family: verdana;
		width: 100%;
		padding: 12px 20px;
		margin: 1px 0;
		display: inline-block;
		border: 3px solid #ccc;
		box-sizing: border-box;
		font-size: large;
		text-align: left;
	}
	/* botón de registro/login*/
	button {
		background: #34b8d9;
		background-image: -webkit-linear-gradient(top, #34b8d9, #2980b9);
		background-image: -moz-linear-gradient(top, #34b8d9, #2980b9);
		background-image: -ms-linear-gradient(top, #34b8d9, #2980b9);
		background-image: -o-linear-gradient(top, #34b8d9, #2980b9);
		background-image: linear-gradient(to bottom, #34b8d9, #2980b9);
		text-shadow: 1px 1px 3px #666666;
		-webkit-box-shadow: 0px 1px 3px #666666;
		-moz-box-shadow: 0px 1px 3px #666666;
		box-shadow: 0px 1px 3px #666666;
		font-family: Georgia;
		color: #f5f9fa;
		font-size: 23px;
		padding: 10px 20px 10px 20px;
		text-decoration: none;
	}
	/* Acción al poner el mouse encima del botón registro/login*/
	button:hover {
		background: #e6ab2b;
		background-image: -webkit-linear-gradient(top, #e6ab2b, #3498db);
		background-image: -moz-linear-gradient(top, #e6ab2b, #3498db);
		background-image: -ms-linear-gradient(top, #e6ab2b, #3498db);
		background-image: -o-linear-gradient(top, #e6ab2b, #3498db);
		background-image: linear-gradient(to bottom, #e6ab2b, #3498db);
		text-decoration: none;
	}
	
	td {
		font-family: verdana;
		color: #008CBA;
		background-color: #dadada;
		text-shadow: rgba(0, 0, 0, .2) 2px 6px 5px, rgba(255, 255, 255, .4) 0
			-4px 30px;
	}
	/** formato de la tabla que contiene la vista del login y registro*/
	table {
		font-family: verdana;
		font-size: large;
		text-align: center;
		border: 1px solid #008CBA;
		background: #eeeeee;
		position: relative;
		top: 220px;
	}
	/** estilo del link login-registro*/
	a {
		text-shadow: 1px 1px 3px #666666;
		font-family: Georgia;
		color: #474d08;
		font-size: 23px;
		text-decoration: none;
	}
	/* acción del link login-registro al poner el mouse encima*/
	a:hover {
		background: #fc9f3c;
		text-decoration: none;
	}
	/**
	fondo de pantalla*/
	html {
		background: url('/images/thothScreen.png');
		-webkit-background-size: xx-large;
		-moz-background-size: xx-large;
		-o-background-size: xx-large;
		background-repeat: no-repeat;
		background-attachment: fixed;
		background-position: center;
	}
	</ui:style>
	<g:HTMLPanel> <!-- /images/Fondo.jpeg -->
		<center>
			<body> <!-- background=" /images/thothSplashScreen.png "> -->
				<!-- <div class="container-fluid bg-1 text-center"> <img src="/images/thothSplashScreen.png" 
					class="img-circle" width="400" height="320"> </img> </div> -->

				<table>

					<th colspan="2">
						<img src="/images/LogoPrincipal.png" style="width:384px;height:133px; "
							align="right">
						</img>
					</th>
					<tr>
						<td>Email</td>
						<td>
							<g:TextBox ui:field="email"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>Password</td>
						<td>
							<g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
						</td>
					</tr>
					<tr>
						<td></td>
						<td>
							<g:Button ui:field="submit_button"></g:Button>
							<g:Anchor ui:field="register_link"></g:Anchor>
						</td>
					</tr>
					<td>
						<g:SimplePanel ui:field="message"></g:SimplePanel>
					</td>
				</table>

				<!-- <img src="/images/thothSplashScreen.png" width="350" height="350"></img> -->
				<br />
				<br />
				<br />

			</body>
		</center>
	</g:HTMLPanel>
</ui:UiBinder> 